class A:
    def func(a):
        pass
    def func(a,b):
        pass
# a:self 

class Base:
    def func(self,a):
        return  a+10

class Child(Base):
    def func(self,a,b):
        return a*b
c=Child()
s=c.func(1,2) #先找自己，再找父类
print(s)

